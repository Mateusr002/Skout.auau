<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/botao_desenho"
    tools:context=".InnerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:layout_margin="10dp"/>

    <EditText
        android:background="@drawable/borda_botao"
        android:id="@+id/edtUsuÃ¡rio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableRight="@drawable/ic_outline_email"
        android:hint="digite seu email"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:layout_marginTop="10dp"/>

    <EditText
        android:background="@drawable/borda_botao"
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableRight="@drawable/ic_outline_lock"
        android:hint="@string/insira_sua_senha"
        android:maxLength="50"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Entrar"
        android:background="@drawable/borda_botao"/>

    <Button
        android:onClick="SairSistema"
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="sair"
        android:background="@drawable/borda_botao"/>
    </LinearLayout>

</ScrollView>

